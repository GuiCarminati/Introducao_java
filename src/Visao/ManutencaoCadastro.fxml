<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Visao.ManutencaoVisao">
   <children>
      <Label alignment="TOP_CENTER" contentDisplay="TOP" layoutX="143.0" layoutY="14.0" text="CADASTRO MANUTENÇÃO" textAlignment="CENTER" textFill="#e41b1b">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <VBox layoutX="17.0" layoutY="50.0" prefHeight="200.0" prefWidth="566.0">
         <children>
            <HBox prefHeight="37.0" prefWidth="566.0">
               <children>
                  <Label text="Selecione o Equipamento">
                     <padding>
                        <Insets right="10.0" top="5.0" />
                     </padding>
                  </Label>
                  <ComboBox fx:id="txtListaEquipamentos" prefWidth="150.0" />
               </children>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </HBox>
            <HBox prefHeight="36.0" prefWidth="566.0">
               <children>
                  <Label text="Informe a Descrição">
                     <HBox.margin>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtDescricao">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="38.0" prefWidth="477.0">
               <children>
                  <Label text="Informe a Data">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <DatePicker fx:id="dataManutencao" />
               </children>
            </HBox>
            <HBox prefHeight="39.0" prefWidth="566.0">
               <children>
                  <Label text="Informe o Valor">
                     <padding>
                        <Insets right="10.0" top="5.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="txtValorManutencao" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Button layoutX="503.0" layoutY="341.0" mnemonicParsing="false" onAction="#onClickSalvarManutencao" text="SALVAR" />
      <Button layoutX="32.0" layoutY="341.0" mnemonicParsing="false" onAction="#voltaMenu" text="VOLTAR" />
   </children>
</AnchorPane>
